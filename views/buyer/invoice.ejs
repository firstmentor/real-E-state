<!-- views/buyer/invoice.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Invoice</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


  <style>
    body { font-family: Arial; padding: 20px; }
    h2 { text-align: center; }
    table { width: 100%; margin-top: 20px; border-collapse: collapse; }
    th, td { border: 1px solid #ccc; padding: 10px; }
  </style>
</head>
<body>
  <h2>Property Booking Invoice</h2>
  <p><strong>Invoice ID:</strong> <%= booking._id %></p>
  <p><strong>Buyer:</strong> <%= booking.buyer.name %> | <%= booking.buyer.email %></p>
  <p><strong>Seller:</strong> <%= booking.seller.name %> | <%= booking.seller.email %></p>
  <p><strong>Date:</strong> <%= booking.bookingDate.toDateString() %></p>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Property</th>
        <th>Message</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= booking.property.name %></td>
        <td><%= booking.message %></td>
        <td><%= booking.status %></td>
      </tr>
    </tbody>
  </table>
</body>
</html>
