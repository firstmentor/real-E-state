<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-light-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/dashboard" class="brand-link">
    <img src="" alt="" class="brand-image img-circle elevation-3" style="opacity: .8">
    <h3 style="align-items: center;">REAL <span style="color: #5e23dc;">E-STATE</span></h3>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="/dist/img/avatar.png" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <a href="/dashboard" class="d-block">
          <%= name %> (<%= role %>)
        </a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

        <% if (role === 'admin') { %>
          <!-- Admin Menu -->
          
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link active">
              <i class="nav-icon fas fa-address-book"></i>
              <p>Contact <i class="right fas fa-angle-left"></i></p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/contact/display" class="nav-link active">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Display</p>
                </a>
              </li>
            </ul>
          </li>

          <li class="nav-item">
            <a href="/admin/property_book" class="nav-link">
              <i class="fa-solid fa-house-lock"></i>
              <p>Booked Properties</p>
            </a>
          </li>
          <!-- <li class="nav-item">
            <a href="/admin/Approve Sellers" class="nav-link">
              <i class="fa-solid fa-house-lock"></i>
              <p>Approve Sellers</p>
            </a>
          </li> -->

          <!-- âœ… New Menu for Admin to Manage Sellers -->
          
          </li><li class="nav-item">
            <a href="/admin/manage_sellers" class="nav-link">
              <i class="fas fa-user-check nav-icon"></i>
              <p>Manage Sellers</p>
            </a>
          </li>

        <% } else if (role === 'seller') { %>
          <li class="nav-item has-treeview">
            <a href="#" class="nav-link active">
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>Category <i class="right fas fa-angle-left"></i></p>
            </a>
            <ul class="nav nav-treeview">
              <li class="nav-item">
                <a href="/category/display" class="nav-link active">
                  <i class="far fa-circle nav-icon"></i>
                  <p>Display</p>
                </a>
              </li>
            </ul>
          </li>
          <!-- Seller Menu -->
          <li class="nav-item">
            <a href="/property/display" class="nav-link">
              <i class="nav-icon fas fa-home"></i>
              <p>My Properties</p>
            </a>
          </li>

          <li class="nav-item">
            <a href="/property/display" class="nav-link">
              <i class="nav-icon fas fa-plus"></i>
              <p>Add Property</p>
            </a>
          </li>

          <li class="nav-item">
            <a href="/seller/bookings" class="nav-link">
              <i class="fa-solid fa-calendar-check"></i>
              <p>Property Bookings</p>
            </a>
          </li>

        <% } else if (role === 'buyer') { %>
          <!-- Buyer Menu -->
          <li class="nav-item">
            <a href="/properties" class="nav-link">
              <i class="nav-icon fas fa-home"></i>
              <p>Browse Properties</p>
            </a>
          </li>

          <li class="nav-item">
            <a href="/my_bookings" class="nav-link">
              <i class="nav-icon fas fa-calendar-check"></i>
              <p>My Bookings</p>
            </a>
          </li>
        <% } %>

        <!-- Common Options -->
        <li class="nav-item">
          <a href="/my_profile" class="nav-link">
            <i class="nav-icon fas fa-user"></i>
            <p>My Profile</p>
          </a>
        </li>

        <li class="nav-item">
          <a href="/change_password" class="nav-link">
            <i class="nav-icon fas fa-key"></i>
            <p>Change Password</p>
          </a>
        </li>

        <li class="nav-item">
          <a href="/logout" class="nav-link">
            <i class="nav-icon fas fa-sign-out-alt"></i>
            <p>Logout</p>
          </a>
        </li>

      </ul>
    </nav>
    <!-- /.sidebar-menu -->
  </div>
  <!-- /.sidebar -->
</aside>
